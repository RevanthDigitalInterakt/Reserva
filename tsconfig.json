{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components": [
        "./src/components/*"
      ],
      "@config": [
        "./src/config/*"
      ],
      "@services": [
        "./src/services/*"
      ],
      "@utils": [
        "./src/utils/*"
      ],
      "@hooks": [
        "./src/hooks/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
